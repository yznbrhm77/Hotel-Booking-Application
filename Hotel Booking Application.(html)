       var payment_method_select = document.getElementById("payment_method");
       var credit_card_fields = document.getElementById("credit_card_fields");
     
       payment_method_select.addEventListener("change", function() {
         if (this.value === "credit_card") {
           credit_card_fields.style.display = "block";
